<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="154dp"
            android:layout_height="92dp"
            android:text="boa tarde!"
            android:textSize="20sp"
            android:id="@+id/txv_texto"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="152dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="125dp"
    />
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/btn_iniciar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_nome"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:hint="Digite seu nome" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_iniciar"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txv_texto"/>

</android.support.constraint.ConstraintLayout>